<button class="btn btn-success" @onclick="() => modal.Open()">Edit</button>

<ModalForm @ref="modal">
    <Title>Edit @nameof(Employee) @Employee.Name</Title>
    <Body>
        <EmployeeForm Employee="Employee" OnValidSubmit="Edit" FormId="@formId"></EmployeeForm>
    </Body>
    <Footer>
        <DialogTypeComponent Close="@modal.Close" ShowSaveButton="true" FormId="@formId"></DialogTypeComponent>
    </Footer>
</ModalForm>
